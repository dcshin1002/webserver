<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/sub_rel_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#4F4F4F"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listItemTextProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingBottom="1dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/listItemTextCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingBottom="1dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/listItemTextDeliveryMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:text="region_text"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/listItemTextRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:text="sector_txt"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        android:layout_gravity="top"  />
        <!--<TextView
            android:id="@+id/dummy_view"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="10"/>-->
        <Button
            android:id="@+id/btn_complete"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="#42A5F5"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:text="배송완료"
            android:layout_gravity="top"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_deliveryinfo"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="#42A5F5"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:text="정보확인"
            android:textColor="#FFFFFF"
            android:layout_gravity="top"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>