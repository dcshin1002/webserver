<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@mipmap/tag_in_transit_v2" />

    <TextView
        android:id="@+id/listAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_icon"
        android:gravity="center_vertical"
        android:text="id_text"
        android:textStyle="bold"
        android:textColor="#4F4F4F"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/sub_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_icon"
        android:layout_below="@id/listAddr">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/btn_complete">
            <TextView
                android:id="@+id/listItemTextCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="1dp"
                android:text="addr_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/listItemTextDeliveryMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="region_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/listItemTextRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="sector_txt"
                android:textSize="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="#42A5F5"
            android:textColor="#FFFFFF"
            android:focusable="false"
            android:text="배송완료" />
        <Button
            android:id="@+id/btn_deliveryinfo"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="#42A5F5"
            android:textColor="#FFFFFF"
            android:focusable="false"
            android:visibility="gone"
            android:text="정보확인" />
    </RelativeLayout>

</RelativeLayout>